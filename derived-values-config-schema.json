{
  "$schema": "http://json-schema.org/draft/2019-09/schema#",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "LiteralDerivedValueConfiguration": {
      "type": "object",
      "properties": {
        "literal": {
          "type": "string"
        }
      }
    },
    "ReferenceDerivedValueConfiguration": {
      "type": "object",
      "properties": {
        "pageName": {
          "type": "string"
        },
        "inputName": {
          "type": "string"
        }
      }
    }
  },
  "properties": {
    "derived-values": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "groupName": {
            "type": "string"
          },
          "fieldName": {
            "type": "string"
          },
          "values": {
            "type": "array",
            "items": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "value": {
                  "oneOf": [
                    {
                      "$ref": "#/definitions/ReferenceDerivedValueConfiguration"
                    },
                    {
                      "$ref": "#/definitions/LiteralDerivedValueConfiguration"
                    }
                  ]
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "SINGLE_VALUE",
                    "DATE_VALUE",
                    "ENUMERATED_SINGLE_VALUE",
                    "ENUMERATED_MULTI_VALUE"
                  ]
                },
                "condition": {
                  "type": "object",
                  "properties": {
                    "conditions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "pageName": {
                            "type": "string"
                          },
                          "input": {
                            "type": "string"
                          },
                          "matcher": {
                            "type": "string"
                          },
                          "value": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "logicalOperator": {
                      "type": "string",
                      "enum": ["OR", "AND"]
                    }
                  },
                  "required": ["logicalOperator", "conditions"]
                }
              }
            },
            "required": [
              "type",
              "value",
              "condition"
            ]
          }
        }
      }
    }
  }
}