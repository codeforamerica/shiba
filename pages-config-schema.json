{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "patternProperties": {
    "^(shiba-configuration).*$": {
      "type": "object",
      "properties": {
        "pageDefinitions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/page"
          }
        },
        "landmarkPages": {
          "type": "object",
          "properties": {
            "startTimerPage": {
              "type": [
                "string",
                "null"
              ]
            },
            "landingPages": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "terminalPage": {
              "type": "string"
            },
            "submitPage": {
              "type": "string"
            }
          }
        },
        "workflow": {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "$ref": "#/definitions/navigationPage"
            }
          }
        }
      },
      "required": [
        "pageDefinitions",
        "landmarkPages",
        "workflow"
      ]
    }
  },
  "definitions": {
    "page": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "pageTitle": {
          "$ref": "#/definitions/value"
        },
        "headerKey": {
          "$ref": "#/definitions/value"
        },
        "hasPrimaryButton": {
          "type": "boolean"
        },
        "headerHelpMessageKey": {
          "#ref": "#/definitions/value"
        },
        "inputs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/input"
          }
        }
      }
    },
    "navigationPage": {
      "type": "object",
      "properties": {
        "pageConfiguration": {
          "$ref": "#/definitions/page"
        },
        "appliesToGroup": {
          "type": "string"
        },
        "subtleLinkTargetPage": {
          "type": "string"
        },
        "datasources": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/datasource"
          }
        },
        "skipCondition": {
          "properties": {
            "conditions": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/condition",
                "pageName": {
                  "type": "string"
                }
              }
            },
            "logicalOperator": {
              "type": "string",
              "enum": ["OR", "AND"]
            }
          },
          "required": ["conditions"]
        },
        "nextPages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pageName": {
                "type": "string"
              },
              "condition": {
                "$ref": "#/definitions/condition"
              }
            },
            "required": [
              "pageName"
            ]
          }
        },
        "conditionalNavigation": {
          "type": "boolean"
        },
        "groupName": {
          "type": "string"
        },
        "dataMissingRedirect": {
          "type": "string"
        },
        "enrichment": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "pageConfiguration"
      ]
    },
    "value": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        },
        "conditionalValues": {
          "type": "array",
          "items": {
            "additionalProperties": false,
            "type": "object",
            "properties": {
              "value": {
                "type": "string"
              },
              "condition": {
                "$ref": "#/definitions/condition"
              },
              "compositeCondition" : {
                "$ref": "#/definitions/compositeCondition"
              }
            }
          }
        }
      }
    },
    "input": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "TEXT",
            "DATE",
            "NUMBER",
            "RADIO",
            "CHECKBOX",
            "SELECT",
            "YES_NO",
            "MONEY",
            "TEXTAREA",
            "CUSTOM",
            "HOURLY_WAGE",
            "SSN",
            "PHONE",
            "LONG_TEXT"
          ]
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "promptMessage": {
          "type": "object",
          "properties": {
            "promptMessageFragmentName": {
              "type": "string"
            },
            "promptMessageKey": {
              "type": "string"
            }
          }
        },
        "helpMessageKey": {
          "type": "string"
        },
        "options": {
          "type": "object",
          "properties": {
            "selectableOptions": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/option"
              }
            },
            "datasources": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/datasource"
              }
            }
          },
          "additionalProperties": false
        },
        "followUps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/input"
          }
        },
        "followUpValues": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "customInputFragment": {
          "type": "string"
        },
        "condition": {
          "$ref": "#/definitions/condition"
        },
        "validators": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "errorMessageKey": {
                "type": "string"
              },
              "validation": {
                "type": "string",
                "enum": [
                  "NONE",
                  "NOT_BLANK",
                  "SELECT_AT_LEAST_ONE",
                  "SSN",
                  "DATE",
                  "ZIPCODE",
                  "STATE",
                  "PHONE",
                  "MONEY",
                  "NUMBER_OF_JOBS",
                  "PHONE_STARTS_WITH_ONE"
                ]
              },
              "condition": {
                "$ref": "#/definitions/condition"
              }
            }
          }
        },
        "readOnly": {
          "type": "boolean"
        },
        "defaultValue": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "type"
      ]
    },
    "condition": {
      "type": "object",
      "properties": {
        "input": {
          "type": "string"
        },
        "value": {
          "type": "string"
        },
        "matcher": {
          "type": "string",
          "enum": [
            "NONE_SELECTED",
            "CONTAINS",
            "NOT_EMPTY",
            "DOES_NOT_CONTAIN",
            "EMPTY",
            "CONTAINS_SUBSTRING",
            "DOES_NOT_CONTAIN_SUBSTRING"
          ]
        }
      }
    },
    "compositeCondition": {
      "type": "object",
      "properties": {
        "logicalOperator": {
          "type": "string"
        },
        "conditions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/condition"
          }
        }
      }
    },
    "option": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        },
        "messageKey": {
          "type": "string"
        },
        "helpMessageKey": {
          "type": "string"
        },
        "helpIcon": {
          "type": "string"
        },
        "isNone": {
          "type": "boolean"
        }
      },
      "required": [
        "value",
        "messageKey"
      ],
      "additionalProperties": false
    },
    "datasource": {
      "type": "object",
      "properties": {
        "pageName": {
          "type": "string"
        },
        "groupName": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}